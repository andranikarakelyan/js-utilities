  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepublishOnly": "npm test && npm run build && npm run minify && npm run check-git-clean",
    "build": "rimraf dist && tsc",
    "test": "jest",
    "check-git-clean": "git diff --quiet || (echo '‚ùå Commit your changes first!' && exit 1)",
    "docs:build": "typedoc --out .docs",
    "minify": "find dist -name \"*.js\" -exec bash -c 'out=\"${0%.js}.js\"; terser \"$0\" -o \"$out\"' {} \\;"
  },
